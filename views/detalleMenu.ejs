<!DOCTYPE html>
<html>
  
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta author="Dante Delprato">
  </head>


  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navbar.ejs') %>

    <!-- Header -->
    <header class="ps-display-container ps-content ps-wide" id="home">
      <img
        class="ps-image"
        src="/images/header.jpg"
        alt="Pimienta & Sal"
        width="1600"
        height="800"
      />
      <div class="ps-display-bottomleft ps-padding-large ps-opacity">
        <h1 class="ps-xxlarge">Sabores que enamoran</h1>
      </div>
    </header>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%=menues[id-1].nombre%></h1>
          <br />
          <h3><%=menues[id-1].descripcion%></h3>
          <br />
          <h4><%=menues[id-1].detalle%></h4>
          <p class="ps-text-grey">
            U$D <%=menues[id-1].precio%>
          </p>
        </div>


        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="<%=menues[id-1].imagen%>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
